<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" xmlns:gap = "http://phonegap.com/ns/1.0" id="io.cordova.BlankCordovaApp" version="1.0.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>MP2</name>
  <description>
    A blank project that uses Apache Cordova to help you build an app that targets multiple mobile platforms: Android, iOS, Windows, and Windows Phone.
  </description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">
    Apache Cordova Team
  </author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <vs:features />
  <gap:plugin name="com.phonegap.plugins.barcodescanner" version="2.2.0" />
  <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
  <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
  <gap:plugin name="com.megster.cordova.bluetoothserial" version="0.3.3" />
  <gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
  <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.3" />

  <!-- Android -->
  <icon src="res/icons/android/icon-36-ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="res/icons/android/icon-48-mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="res/icons/android/icon-72-hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="res/icons/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />

  <!-- Android -->
  <gap:splash src="res/screens/android/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="ldpi" />
  <gap:splash src="res/screens/android/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="mdpi" />
  <gap:splash src="res/screens/android/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="hdpi" />
  <gap:splash src="res/screens/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="xhdpi" />

  <!-- iPhone / iPod Touch  -->
  <icon src="res/icons/ios/icon-60.png" gap:platform="ios" width="60" height="60" />
  <icon src="res/icons/ios/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

  <!-- iPhone and iPod touch -->
  <gap:splash src="res/screens/ios/screen-iphone-portrait.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="res/screens/ios/screen-iphone-portrait-2x.png" gap:platform="ios" width="640" height="960" />

</widget>
